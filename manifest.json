{
  "manifest_version": 3,
  "name": "Interesting Fact Pop-up",
  "version": "1.0",
  "description": "Displays an interesting fact in a pop-up when opening a new tab",
  "permissions": ["tabs"],
  "host_permissions": ["https://uselessfacts.jsph.pl/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}